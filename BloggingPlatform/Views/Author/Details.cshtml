@model BloggingPlatform.Models.Entity.Author
@{
    ViewData["Title"] = "Author Profile";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h2>@Model.FirstName @Model.LastName</h2>
                    <p>@Html.DisplayFor(model => model.Email)</p>
                </div>

                <div class="card-body">
                    <div class="text-center mb-4">
                        <!-- Profile Picture (optional) 
                        <img src="https://via.placeholder.com/150" alt="Profile Picture" class="rounded-circle img-fluid" style="width: 150px;"> -->
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">First Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4">Last Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4">Role:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Html.DisplayFor(model => model.Role)</span>
                        </dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Password:</dt>
                        <dd class="col-sm-8 text-muted">********</dd> <!-- Password is hidden for privacy -->

                        <dt class="col-sm-4">Joined On:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
                    </dl>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-warning mx-2">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>
                    <a asp-action="Index" asp-controller="Blog" class="btn btn-secondary mx-2">
                        <i class="fas fa-arrow-left"></i> Back to Blogs
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
